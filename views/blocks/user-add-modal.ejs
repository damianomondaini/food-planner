<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="createModalTitle">Add a recipe</h5>
            <button type="button" class="close createModalClose" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form class="recipeFormCreate">
                <div class="form-group">
                    <label for="recipeNameCreate">Name</label>
                    <input type="text" class="form-control" id="recipeNameCreate" name="recipeNameCreate">
                </div>
                <div class="form-group">
                    <label for="recipeCategoryCreate">Category</label>
                    <select class="form-control" id="recipeCategoryCreate">
                        <% include ../blocks/categories %>
                    </select>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="true" id="recipeCheatMealCreate">
                        <label class="form-check-label" for="recipeCheatMealCreate">
                            Is it a cheat meal ?
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="recipeServingCreate">Serving</label>
                    <div class="input-group">
                        <input type="number" class="form-control" id="recipeServingCreate">
                        <div class="input-group-append">
                            <span class="input-group-text">Times</span>
                        </div>
                    </div>
                </div>
                <div class="form-group" id="recipeIngredientBoxCreate">
                    <label>Ingredients <i class="fas fa-plus" id="recipeAddIngredientCreate"></i></label>
                    <div class="input-group recipeIngredientCreate" id="recipeIngredientModelCreate">
                        <input type="text" class="form-control" placeholder="Ingredient" id="recipeIngredient1Create">
                        <input type="text" class="form-control" placeholder="Amount" id="recipeAmount1Create">
                        <select class="form-control" id="recipeUnit1Create">
                            <option value="g">g</option>
                            <option value="ml">ml</option>
                            <option value="none">none</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="recipeImageCreate">Image</label>
                    <input type="file" class="form-control-file" id="recipeImageCreate" accept=".png, .jpg, .jpeg" name="recipeImageCreate">
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary recipeCreate" data-dismiss="modal">Create</button>
        </div>
        </div>
    </div>
</div>